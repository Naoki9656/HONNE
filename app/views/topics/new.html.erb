<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_area :title, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :comment %>
            <%= f.text_area :description, class: 'form-control',rows: 10 %>
          </div>

          <div class="form-group">
            <%= f.label :tag_list, "タグ（カンマ区切り）" %><br>
            <%= text_field_tag 'topic[tag_list]', @topic.tag_list.join(','), class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-white btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
