<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <%= link_to 'コメントする', 'new', class: 'btn btn-block btn-black' %>
      </div>
    </div>
  </div>
</div>
